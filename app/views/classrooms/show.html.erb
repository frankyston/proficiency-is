<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">
			Matricula
		</h1>
	</div>
</div>

<div class="row">
	<div class="col-lg-6">
		<p>
			<strong>Estudante:</strong>
			<%= @classroom.student.name %>
		</p>

		<p>
			<strong>Curso:</strong>
			<%= @classroom.course.name %>
		</p>

		<p>
			<strong>Data da Matricula:</strong>
			<%= @classroom.entry_at.strftime("%d/%m/%Y %H:%M") %>
		</p>

		<%= link_to 'Editar', edit_classroom_path(@classroom), :class=>"btn btn-primary" %>
		<%= link_to 'Voltar', classrooms_path, :class=>"btn btn-primary" %>
	</div>
</div>


