<%= simple_form_for(@classroom) do |f| %>
	<%= f.error_notification %>
	<div class="form-group">
		<%= f.association :student, :label => "Estudante", :input_html => {:class => "form-control"} %>
	</div>

	<div class="form-group">
		<%= f.association :course, :label => "Curso", :input_html => {:class => "form-control"} %>
	</div>

	<div class="form-group">
		<%= f.input :entry_at, :input_html => {:class => "form-control", :id => "datetimepicker", :"data-date" => Time.zone.now.strftime("%d/%m/%Y %H:%M"), :"data-date-format" => "DD/MM/YYYY HH:mm"}, :as => "string" %>
	</div>

	<div class="form-actions">
		<%= f.button :submit, :value => "Salvar", :class => "btn btn-info" %>
	</div>
<% end %>
