<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Estudantes
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
           <th>Nome</th>
           <th>Número do Registro</th>
           <th>Status</th>
           <th>Ações</th>
         </tr>
       </thead>
       <tbody>
         <%@students.each do |student|%>
         <tr>
          <td><%= student.name %></td>
          <td><%= student.register_number%></td>
          <td><%= status_student student.status%></td>
          <td>
           <%= link_to "Exibir", student, :class=>"btn btn-primary" %>
           <%= link_to "Editar", edit_student_path(student), :class=>"btn btn-primary" %>
           <%= link_to "Excluir", student, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, :class=>"btn btn-primary" %>
         </td>
       </tr>
       <%end%>
     </tbody>
   </table>
 </div>
  <div class="text-center">
    <%= will_paginate @students, :previous_label => "Anterior", :next_label => "Próximo"  %>
  </div>
   <%= link_to 'Novo Estudante', new_student_path, :class=>"btn btn-primary" %>
</div>
</div>



